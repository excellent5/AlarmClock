<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alarmclock"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.alarmclock.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
        	android:name="com.example.alarmclock.AddClock"
            android:label="添加闹钟" >
        </activity>
        
        <activity
        	android:name="com.example.alarmclock.EditClock"
            android:label="编辑闹钟" >
        </activity>
        
        <activity
        	android:name="com.example.alarmclock.AlarmActivity"
        	android:configChanges="orientation|keyboardHidden|navigation|screenSize"
            android:label="闹铃" 
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar">
        </activity>
        
        <activity
        	android:name="com.example.alarmclock.ExpandableListViewTest"
            android:label="重复" >
        </activity>
        
    </application>
    
    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>
